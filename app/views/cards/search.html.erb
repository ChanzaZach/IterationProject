<h3>Search Results</h3>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Type</th>
      <th>Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @results.each do |result| %>

    <tr>
      <td><%= result.title %></td>
      <td><%= result.description %></td>
      <td><%= result.variety %></td>
      <td><%= result.num %></td>
      <td> <%= link_to 'Show', result %> </td>
      <% if user_signed_in? %>
        <td> <%= link_to 'Edit', edit_card_path(result) %> <%= ' | '%> <%= link_to 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      <% end %>
    </tr>
  <%end %>
  </tbody>
  </table>